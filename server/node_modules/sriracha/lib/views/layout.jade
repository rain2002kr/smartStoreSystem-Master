doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='')
    meta(name='author', content='')
    link(rel='shortcut icon' href='#{appPath}/static/favicon.ico' type='image/x-icon')
    link(rel='icon' href='#{appPath}/static/favicon.ico' type='image/x-icon')
    title SB Admin - Bootstrap Admin Template
    block styles
      // Bootstrap Core CSS
      link(href='#{appPath}/static/css/bootstrap.min.css', rel='stylesheet')
      // Custom CSS
      link(href='#{appPath}/static/css/sb-admin.css', rel='stylesheet')
      // Morris Charts CSS
      link(href='#{appPath}/static/css/plugins/morris.css', rel='stylesheet')
      // Custom Fonts
      link(href='#{appPath}/static/font-awesome/css/font-awesome.min.css', rel='stylesheet', type='text/css')
      // HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
      // WARNING: Respond.js doesn't work if you view the page via file://
      //if lt IE 9
        script(src='https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js')
        script(src='https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js')
  body(id=pageId)
        block content

    block scripts
      script(type="text/javascript" src='#{appPath}/static/js/jquery.js')
      script(type="text/javascript" src="#{appPath}/components/tinymce/tinymce.js")
      // Bootstrap Core JavaScript
      script(src='#{appPath}/static/js/bootstrap.min.js')
      // Search suggestions
      script(src='#{appPath}/static/js/plugins/typeahead/bootstrap3-typeahead.min.js')
      script(src='#{appPath}/static/js/plugins/typeahead/bloodhound.min.js')

      script(type="text/javascript" src="#{appPath}/components/moment/min/moment.min.js")
      
      script(type="text/javascript" src="#{appPath}/components/eonasdan-bootstrap-datetimepicker/src/js/bootstrap-datetimepicker.js")

      script(type='text/javascript').
        //- close alerts after 5 seconds
        window.setTimeout(function() { $(".alert").alert('close'); }, 5000);
